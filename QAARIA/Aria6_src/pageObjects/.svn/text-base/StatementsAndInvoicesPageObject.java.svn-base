package pageObjects;

import org.openqa.selenium.By;

/**
 * Created by joseph.gannon
 */
public class StatementsAndInvoicesPageObject
{
    public static By getInvoicesTab()
    {
        return By.xpath("//*[@id=\"bottomPaneTabBar\"]/ul/li[3]/a");
    }
    public static By getGenerateInvoiceLink()
    {
        return By.partialLinkText("Generate Invoice");
    }
    public static By getGenerateInvoiceBtn()
    {
        return By.xpath("//*[@id=\"submit-button\"]");
    }
    public static By getInvoiceRow()
    {
        return By.xpath("//*[@id=\"DataTables_Table_17\"]/tbody/tr[1]/td[2]/a");
    }

    public static By getVoidUsageAndDiscardLink()
    {
        return By.partialLinkText("Void this invoice and Discard Usage");
    }
    public static By getFromDateForUsage()
    {
        return By.name("inStartDateString");
    }
    public static By getRetrieveUsageBtn()
    {
        return By.id("submit-button");
    }
    public static By getUsageTable()
    {
        return By.id("DataTables_Table_0");
    }

    public static By getVoidInvoiceMsg()
    {
        return By.xpath("//*[@id=\"accountsSectionBottomContainer\"]/div/div/div[3]/p");
    }
}
